<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/shopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:minHeight="25dp"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/text_size_small" />
    <TextView
        android:id="@+id/expirationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/shopName"
        android:gravity="center_vertical"
        android:minHeight="25dp"
        android:textColor="@color/orange"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/orderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:minHeight="25dp"
        android:textColor="@color/text_color_red"
        android:textSize="@dimen/text_size_small" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shopName"
        android:background="@color/line_bg"
        android:cacheColorHint="#00000000"
        android:divider="@color/white"
        android:dividerHeight="@dimen/margin_small"
        android:fadingEdge="none"
        android:listSelector="#00000000"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/productNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/listView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:minHeight="25dp"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/productNum"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:minHeight="25dp"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/operation"
        android:layout_width="75dp"
        android:layout_height="29dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/listView"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/go_homepage_bg"
        android:gravity="center"
        android:minHeight="25dp"
        android:textColor="@color/orange"
        android:textSize="@dimen/text_size_small" />
</RelativeLayout>
