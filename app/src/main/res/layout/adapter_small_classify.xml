<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/point_icon" />

        <TextView
            android:id="@+id/smallClassifyName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_general_min"
            android:layout_weight="1"
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/text_size_normal" />

        <ImageView
            android:id="@+id/enter"
            android:layout_width="44dp"
            android:layout_height="48dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/arrow_icon" />
    </LinearLayout>


    <tsingcloud.android.reallycheap.widgets.view.SAGridView
        android:id="@+id/smallClassifyGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="#00000000"
        android:numColumns="3"
        android:horizontalSpacing="5dp"
        android:scrollbars="none" />
</LinearLayout>
